#!/bin/sh

session="alacritty-$ALACRITTY_WINDOW_ID"

# If the session already exists, attach to it; otherwise create it.
# The `exec` builtin replaces the current shell process with the chosen tmux command.
if tmux has-session -t "$session" 2>/dev/null; then
    exec tmux attach -t "$session"
else
    exec tmux new -s "$session"
fi
