[credential]
    helper = cache
[push]
    default = simple
[core]
    excludesfile = ~/.git_global_ignore
    symlinks = true
    # Treat spaces before tabs and all trailing whitespace as an error
    whitespace = spaces-before-tab,trailing-space
    autocrlf = input
    editor = vim
[color]
    ui = true
[diff]
    renames = copies
[merge]
    stat = true
[alias]
    st = status
    d = diff
    a = add
    ci = commit
    co = checkout
    llog = log --date=local
    cdiff = diff --cached
    wdiff = diff --word-diff
    padd = add -p
[include]
    path = ~/.gitconfig_local
