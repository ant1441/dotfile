# TODO: Move this file to $XDG_CONFIG_HOME/git/config
#       Support for this was only added "recently", so check that first

[core]
    editor = vim
    # TODO, move to Default. Defaults to $XDG_CONFIG_HOME/git/ignore.
    excludesfile = ~/.git_global_ignore
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[alias]
    st = status
    d = diff
    a = add
    ci = commit
    co = checkout
    llog = log --date=local
    cdiff = diff --cached
    wdiff = diff --word-diff
    padd = add -p

[diff]
    renames = copies
    wsErrorHighlight = all

[init]
    defaultBranch = main

[push]
    default = simple
    # For Git > 2.37.1, try this out:
    # push.autoSetupRemote

[rebase]
    autosquash = true

[status]
    showStash = true

[include]
    # TODO, move to $XDG_CONFIG_HOME/git/...?
    path = ~/.gitconfig_local

[delta]
    features = decorations


[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
    hyperlinks = true
    line-numbers = true
