# TODO: Move this file to $XDG_CONFIG_HOME/git/config
#       Support for this was only added "recently", so check that first

[core]
    editor = vim
    # TODO, move to Default. Defaults to $XDG_CONFIG_HOME/git/ignore.
    excludesfile = ~/.git_global_ignore

[alias]
    st = status
    d = diff
    a = add
    ci = commit
    co = checkout
    llog = log --date=local
    cdiff = diff --cached
    wdiff = diff --word-diff
    padd = add -p

[diff]
    renames = copies
    wsErrorHighlight = all

[init]
    defaultBranch = main

[push]
    default = simple
    # For Git > 2.37.1, try this out:
    # push.autoSetupRemote

[rebase]
    autosquash = true

[status]
    showStash = true

[include]
    # TODO, move to $XDG_CONFIG_HOME/git/...?
    path = ~/.gitconfig_local
